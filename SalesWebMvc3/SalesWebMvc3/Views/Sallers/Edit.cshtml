@model SalesWebMvc3.Models.ViewModels.SallerFormViewModel
@{
	ViewData["Title"] = "Edit";
}
<h1>@ViewData["Title"]</h1>

<h3>Seller</h3>
<hr />

<div class="row">
	<div class="col-md-4">
		<form asp-controller="Sallers" asp-action="Edit">
			<div class="form-group">
				<label asp-for="@Model.Saller.Name" class="control-label"></label>
				<input asp-for="@Model.Saller.Name" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="@Model.Saller.Email" class="control-label"></label>
				<input asp-for="@Model.Saller.Email" class="form-control" />
			</div>

			<div class="form-group">
				<label asp-for="@Model.Saller.Date" class="control-label"></label>
				<input asp-for="@Model.Saller.Date" class="form-control"  />
			</div>

			<div class="form-group">
				<label asp-for="@Model.Saller.BaseSalary" class="control-label"></label>
				<input asp-for="@Model.Saller.BaseSalary" class="form-control"  />
			</div>

			<div class="form-group">
				<label asp-for="Saller.DepartamentId" class="control-label"></label>
				<select asp-for="Saller.DepartamentId"  asp-items="@(new SelectList(Model.Departaments, "Id", "Name"))" class="form-control"></select>
			</div>
			<input type="hidden" asp-for="Saller.Id" />
			<div class="form-group">
				<input type="submit" value="Edit" class="btn btn-default btn-primary" />
				|
				<a asp-action="Index">Back to list</a>
			</div>
		</form>
	</div>
</div>