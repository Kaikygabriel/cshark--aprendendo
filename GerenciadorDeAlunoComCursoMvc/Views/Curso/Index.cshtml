@model IEnumerable<Curso>

@{
    Layout = null;
    ViewData["Title"] = "Index";
}

<table class="table table-striped  table-hover">
    <thead>
    <tr class="success">
        <th>@Html.DisplayNameFor(Model => Model.Name)</th>
       
        <th>@Html.DisplayNameFor(Model => Model.Price)</th>
        
        <th>

        </th>
    </tr>
    </thead>
    <tbody>
    @foreach(var i in Model)
    {
        <tr >
            <td>
                @Html.DisplayFor(item => i.Name)
            </td>
         
            <td>
                @Html.DisplayFor(item => i.Price)
            </td>
            
            <td>
                <a asp-action="Edit" asp-route-id="@i.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@i.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@i.Id">Delete</a>

            </td>
        </tr>
    }
    </tbody>
</table>
