@model Product
@{
	ViewData["Title"] = "Create";
}
<h1>@ViewData["Title"]</h1>

<div class="row">

	<form asp-action="Create"  >

		<div>
			<label asp-for="Name" class="form-label input-group"></label>
			<input asp-for="Name" class="input-group input-group-text"></input>
		</div>

		<div>
			<label asp-for="Price" class="form-label input-group"></label>
			<input asp-for="Price" class="input-group input-group-text "></input>
		</div>
		
		<div>
			<label asp-for="Quantity" class="form-label input-group"></label>
			<input asp-for="Quantity" class=" input-group input-group-text"></input>
		</div>
		<div>
			<input class="btn btn-outline-primary" type="submit" value="Create" />
		</div>
	
	</form>

</div>