@model IEnumerable<TaskItem>
@{
	ViewData["Title"] = "Index Task";
}
<h1>@ViewData["Title"]</h1>
<hr />

<table class="table table-striped  table-hover">
    <thead>
        <tr class="success">
            <th>@Html.DisplayNameFor(Model => Model.Title)</th>

            <th>@Html.DisplayNameFor(Model => Model.Description)</th>

            <th>

            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(item => i.Title)
                </td>

                <td>
                    @Html.DisplayFor(item => i.Description)
                </td>

                <td>
                    <a asp-action="Edit" asp-route-id="@i.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@i.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@i.Id">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>